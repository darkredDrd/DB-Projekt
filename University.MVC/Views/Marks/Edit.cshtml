@model University.MVC.ViewModels.Marks.RevenueUpdateViewModel

@{
    ViewData["Title"] = "Update";
}

<h2>Update a mark</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Score" class="control-label"></label>
                <input asp-for="Score" class="form-control" />
                <span asp-validation-for="Score" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateAwarded" class="control-label"></label>
                <input asp-for="DateAwarded" class="form-control" />
                <span asp-validation-for="DateAwarded" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="CourseId">Select Course:</label>
                <select asp-for="CourseId" asp-items="Model.Courses" class="form-control">
                    <option value="">--Select a Course--</option>
                </select>
            </div>
            <div>
                <label asp-for="TeacherId">Select Teacher:</label>
                <select asp-for="TeacherId" asp-items="Model.Teachers" class="form-control">
                    <option value="">--Select a Teacher--</option>
                </select>
            </div>
            <div>
                <label asp-for="StudentId">Select Student:</label>
                <select asp-for="StudentId" asp-items="Model.Students" class="form-control">
                    <option value="">--Select a Student--</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
